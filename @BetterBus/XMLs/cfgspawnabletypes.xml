<cfgspawnabletypes>
    <type name="TransitBus">
        <!-- Fahrzeugmodellreferenz -->
        <classname>TransitBus</classname>
        <file>TransitBus/TransitBus.p3d</file>
        
        <!-- Ob das Fahrzeug gespawnt werden kann -->
        <spawnable>true</spawnable>
        
        <!-- Maximale Anzahl von TransitBus-Fahrzeugen -->
        <maxcount>5</maxcount>

        <!-- Attachments: Hier definieren wir die Bauteile, die im Fahrzeug gefunden werden können -->
        <attachments chance="1.0">
            <!-- Elektrik -->
            <item name="CarBattery" chance="1.0"/>
            <item name="SparkPlug" chance="1.0"/>

            <!-- Kühlung -->
            <item name="CarRadiator" chance="1.0"/>

            <!-- Beleuchtung -->
            <item name="HeadlightH7" chance="1.0"/>
            <item name="HeadlightH7" chance="1.0"/>

            <!-- Räder (passen zu deiner config.cpp) -->
            <item name="TransitBusWheel_1_1" chance="1.0"/>
            <item name="TransitBusWheel_1_2" chance="1.0"/>
            <item name="TransitBusWheel_2_1" chance="1.0"/>
            <item name="TransitBusWheel_2_2" chance="1.0"/>
        </attachments>
    </type>
</cfgspawnabletypes>
